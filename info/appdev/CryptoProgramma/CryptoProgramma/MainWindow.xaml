            <Image Source="img/bg.png" Width="350" Height="160" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="175,75,0,0" />

        </Grid>

        <Grid Name="encryptFileGrid" Background="#dfdfde" Visibility="Collapsed" Height="600" Width="700" >

